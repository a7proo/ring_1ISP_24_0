console.log("Деление чисел", x, "и", y, "Ваш ответ = ", otvet)

var x = parseFloat(prompt("Дoбро пожаловать в калькулятор деления двух чисел с остатком \n Пожадуйста введите число"))
var y = parseFloat(prompt("Введите второе число")
