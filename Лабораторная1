console.log("Умножения чисел", x, "и", y, "Ваш ответ = ", otvet)

var x = parseFloat(prompt("Дoбро пожаловать в калькулятор Деления двух чисел \n Пожадуйста введите число"))
var y = parseFloat(prompt("Введите второе число")
