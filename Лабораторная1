var x = parseFloat(prompt("Дoбро пожаловать в калькулятор сложения двух чисел \n Пожадуйста введите число"))
var y = parseFloat(prompt("Введите второе число")
var otvet = x+y
console.log("Сумма чисел", x, "и", y, "Ваш ответ = ", otvet)

var x = parseFloat(prompt("Дoбро пожаловать в калькулятор вычитания двух чисел \n Пожадуйста введите число"))
var y = parseFloat(prompt("Введите второе число")
var otvet = x-y
console.log("Разность чисел", x, "и", y, "Ваш ответ = ", otvet)

